div.content
    div.row
        div.span12
            h2 A List of all the Test Docs
            ul.unstyled.indent
                each example in examples
                    li
                        form(name='form-testdoc', method='POST', action='/delete').form
                            span2
                                a(href="view/#{example._id}", style='font-size: 18px;')  #{example.name}
                            &nbsp; &nbsp 
                            //input(type='hidden', name='_method', value='DELETE')
                            input(type='hidden', name='id', value='#{example.id}') 
                            button.btn.btn-danger delete